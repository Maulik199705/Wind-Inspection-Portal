                {
                    view = new BladeView { Side = State.SelectedView };
                     State.SelectedBlade.Views.Add(view);
                }

                var files = e.GetMultipleFiles(50); 
                foreach (var file in files)
                {
                    using var stream = file.OpenReadStream(maxAllowedSize: 20 * 1024 * 1024);
                    var url = await FileStorageService.SaveFileAsync(stream, file.Name);
                    
                    view.Images.Add(new InspectionImage 
                    {
                        ImageUrl = url,
                        SequenceOrder = view.Images.Count
                    });
                }
                
                UpdateSelectedViewImages();
                if (State.SelectedViewImages.Count > 0)
                {
                    SelectImageDirect(State.SelectedViewImages.First());
                }
                
                Logger.LogInformation("File upload completed: {FileCount} files processed for view {View}", files.Count, State.SelectedView);
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "File upload failed for view {View}", State.SelectedView);
                throw;
            }
        }
 
        private void DeleteImage(InspectionImage img)
        {
            if ( State.SelectedBlade == null) return;
            
            foreach(var view in  State.SelectedBlade.Views)
            {
                if (view.Images.Remove(img))
                {
                    UpdateSelectedViewImages();
                    
                    // Select another image if available
                    if (State.SelectedViewImages.Count > 0)
                    {
                        SelectImageDirect(State.SelectedViewImages.First());
                    }
                    else
                    {
                        State.SelectedImage = null;
                        State.ImageUrl = string.Empty;
                    }
                    break;
                }
            }
            
            StateHasChanged();
        }

