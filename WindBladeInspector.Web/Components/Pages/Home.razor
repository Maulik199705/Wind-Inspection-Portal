@page "/"
@using WindBladeInspector.Core.Services
@using WindBladeInspector.Core.Entities
@inject DashboardService DashboardService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>AeroEdge - Dashboard</PageTitle>

<div class="dashboard-container">

    <!-- HEADER -->
    <div class="dashboard-header">
        <div class="brand">
            <div class="brand-title">AeroEdge Inspector</div>
            <div class="brand-sub">Wind Blade Inspection Portal</div>
        </div>

        <div class="create-section">
            <button class="create-btn" @onclick="ToggleCreate">
                + New Inspection
            </button>
        </div>
    </div>

    <!-- CREATE PANEL -->
    @if (_showCreate)
    {
        <div class="create-card">
            <EditForm Model="@_inputModel" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="form-row">
                    <InputText @bind-Value="_inputModel.ParkName" placeholder="Park Name" />
                    <InputText @bind-Value="_inputModel.TurbineId" placeholder="Turbine ID" />
                    <InputText @bind-Value="_inputModel.Model" placeholder="Model" />
                    <button type="submit" class="submit-btn">
                        Create
                    </button>
                </div>
            </EditForm>
        </div>
    }

    <!-- SEARCH -->
    <div class="search-bar">
        <input type="text" placeholder="Search projects..." @bind="_searchTerm" />
    </div>

    <!-- PROJECT GROUPING -->
    @foreach (var group in DashboardService
        .GetAllProjects()
        .Where(p => string.IsNullOrWhiteSpace(_searchTerm) ||
                    p.ParkName.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    p.TurbineId.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase))
        .GroupBy(p => p.ParkName))
    {
        <div class="project-card">

            <div class="project-header">
                <div>
                    <div class="project-name">@group.Key</div>
                    <div class="project-count">
                        Total turbines: @group.Count()
                    </div>
                </div>
            </div>

            <table class="turbine-table">
                <thead>
                    <tr>
                        <th>Turbine ID</th>
                        <th>Model</th>
                        <th>Inspection Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in group)
                    {
                        <tr>
                            <td>@p.TurbineId</td>
                            <td>@p.Model</td>
                            <td>@p.InspectionDate.ToShortDateString()</td>
                            <td>
                                <span class="status-badge in-progress">
                                    In Progress
                                </span>
                            </td>
                            <td>
                                <button class="resume-btn"
                                        @onclick="@(() => Navigation.NavigateTo("/inspection/" + p.Id))">
                                    Open
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }

</div>

<style>

.dashboard-container {
    background: #0f1115;
    min-height: 100vh;
    padding: 40px;
    color: #e4e6eb;
    font-family: 'Segoe UI', sans-serif;
}

.dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.brand-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #00ff88;
}

.brand-sub {
    font-size: 0.9rem;
    color: #888;
}

.create-btn {
    background: #00ff88;
    color: #000;
    border: none;
    padding: 10px 18px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
}

.create-btn:hover {
    background: #00cc6a;
}

.create-card {
    background: #1a1d24;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 25px;
    border: 1px solid #2a2f3a;
}

.form-row {
    display: flex;
    gap: 12px;
}

.form-row input {
    flex: 1;
    background: #11141a;
    border: 1px solid #2a2f3a;
    padding: 10px;
    border-radius: 6px;
    color: white;
}

.submit-btn {
    background: #00ff88;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
}

.search-bar {
    margin-bottom: 30px;
}

.search-bar input {
    width: 300px;
    padding: 10px 14px;
    border-radius: 6px;
    border: 1px solid #2a2f3a;
    background: #11141a;
    color: white;
}

.project-card {
    background: #161a22;
    border-radius: 12px;
    margin-bottom: 30px;
    border: 1px solid #242a35;
    overflow: hidden;
}

.project-header {
    padding: 18px 22px;
    border-bottom: 1px solid #242a35;
}

.project-name {
    font-size: 1.2rem;
    font-weight: 600;
    color: #00ff88;
}

.project-count {
    font-size: 0.8rem;
    color: #777;
}

.turbine-table {
    width: 100%;
    border-collapse: collapse;
}

.turbine-table th,
.turbine-table td {
    padding: 14px 18px;
    text-align: left;
}

.turbine-table thead {
    background: #1f242f;
}

.turbine-table tbody tr {
    border-top: 1px solid #242a35;
}

.turbine-table tbody tr:hover {
    background: #1c212b;
}

.status-badge {
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
}

.status-badge.in-progress {
    background: #333;
    color: #aaa;
}

.resume-btn {
    background: transparent;
    border: 1px solid #00ff88;
    color: #00ff88;
    padding: 6px 14px;
    border-radius: 6px;
    cursor: pointer;
}

.resume-btn:hover {
    background: #00ff88;
    color: #000;
}

</style>

@code {
    private ProjectInputModel _inputModel = new();
    private bool _showCreate = false;
    private string _searchTerm = "";

    private void ToggleCreate()
    {
        _showCreate = !_showCreate;
    }

    private void HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(_inputModel.ParkName) ||
            string.IsNullOrWhiteSpace(_inputModel.TurbineId))
            return;

        var newProject = DashboardService.CreateProject(
            _inputModel.ParkName,
            _inputModel.TurbineId,
            _inputModel.Model
        );

        Navigation.NavigateTo($"/inspection/{newProject.Id}");
    }

    class ProjectInputModel
    {
        public string ParkName { get; set; } = "";
        public string TurbineId { get; set; } = "";
        public string Model { get; set; } = "";
    }
}
